applications:
- path: .
  memory: 128M
  instances: 1
  domain: eu-gb.mybluemix.net
  name: shsp
  host: shsp
  disk_quota: 1024M
  command: selfhostedchatpolling
  buildpack: https://github.com/cloudfoundry/go-buildpack.git
  env:
    SLACK_TOKEN: <replace this>
    CLOUDANT_DB: shsp_db_dev
    SHSP_LOG_TRAFFIC: false
  services:
    - shsp-cloudant